                                        <tr style="border-bottom:1px solid #ecedee;text-align:left;">
                                            <th style="padding: 0 15px 10px 0;">Item</th>
                                            <th style="padding: 0 15px;">Qt.</th>
                                            <th style="padding: 0 0 0 15px;" align="right">Price</th>
                                        </tr>
                                        <#list order.orderItems as orderItem>
                                            <tr>
                                                <td style="padding: 5px 15px 5px 0;">${orderItem.productOption.product.title} ${orderItem.productOption.underTitle} ${orderItem.productSize}</td>
                                                <td style="padding: 0 15px;">${orderItem.quantity}</td>
                                                <td style="padding: 0 0 0 15px;" align="right">€ ${orderItem.price}</td>
                                            </tr>
                                        </#list>
                                        <tr style="border-top:2px solid #ecedee;text-align:left;padding:15px 0;">
                                            <td style="padding: 0 15px 5px 0;">Shipping</td>
                                            <td style="padding: 0 15px;">1</td>
                                            <td style="padding: 0 0 0 15px;" align="right">
                                                € ${order.cart_orderDelivery.price}</td>
                                        </tr>
                                        <tr style="border-bottom:2px solid #ecedee;text-align:left;padding:15px 0;">
                                            <td style="padding: 0 15px 5px 0;">Payment</td>
                                            <td style="padding: 0 15px;">1</td>
                                            <td style="padding: 0 0 0 15px;" align="right">
                                                € ${order.cart_orderPayment.price}</td>
                                        </tr>
                                        <#if order.coupon??>
                                            <tr style="text-align:left;padding:15px 15px;">
                                                <td style="padding: 0 15px 5px 0;">Coupon</td>
                                                <td style="padding: 0 15px;"></td>
                                                <td style="padding: 0 0 0 15px;"
                                                    align="right"> ${order.coupon.discountType}</td>
                                            </tr>
                                            <tr style="border-bottom:2px solid #ecedee;text-align:left;padding:15px 0;">
                                                <td style="padding: 0 15px 5px 0;">Discount</td>
                                                <td style="padding: 0 15px;"></td>
                                                <#if is_equal(order.coupon.discountType,"PERCENTAGE")>
                                                    <td style="padding: 0 0 0 15px;" align="right"> -${order.coupon.discount}
                                                        %
                                                    </td>
                                                </#if>
                                                <#if is_equal(order.coupon.discountType,"TOTAL")>
                                                    <td style="padding: 0 0 0 15px;" align="right"> -${order.coupon.discount}
                                                        €
                                                    </td>
                                                </#if>
                                                <#if is_equal(order.coupon.discountType,"DELIVERY")>
                                                    <td style="padding: 0 0 0 15px;" align="right">
                                                        -${order.cart_orderDelivery.deliveryENT.price}
                                                        €
                                                    </td>
                                                </#if>
                                            </tr>
                                        </#if>
                                        <tr style="border-bottom:2px solid #ecedee;text-align:left;padding:15px 0;">
                                            <td style="padding: 5px 15px 5px 0; font-weight:bold">Total price</td>
                                            <td style="padding: 0 15px;"></td>
                                            <td style="padding: 0 0 0 15px; font-weight:bold" align="right">
